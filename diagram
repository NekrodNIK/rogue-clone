classDiagram
    Entry *-- Controller
    Entry *-- View
    Entry *-- Model
    View <-- Model
    Model <--> Controller
    Action .. Model
    Action .. Controller
    Key .. Controller
    Effect .. View
    Effect .. Model
    class Model{
        +run(void)
        +apply(Action action)
    }
    class View{
        +apply(Effect effect)
    }
    class Controller {
        +tick()
    }

    class Action
    <<Abstract>> Action
    class Effect
    <<Abstract>> Effect
    class Key
    <<Abstract>> Key
